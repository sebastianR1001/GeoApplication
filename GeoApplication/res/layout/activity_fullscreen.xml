<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alik"
    tools:context="geo.geoapplication.FullscreenActivity" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->
    
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textSize="50sp"
        android:textStyle="bold" />
    
     <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"  >
        
         <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            
            <Button
		        android:id="@+id/startButton"
		        android:layout_width="135dp"
		        android:layout_height="67dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="30sp"
		        android:text="@string/startButton" />

		     <Button
		        android:id="@+id/resetButton"
		        android:layout_width="135dp"
		        android:layout_height="67dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="30sp"
		        android:text="@string/resetButton" />

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            
            <LinearLayout
		        android:id="@+id/timeLayout"
		        style="?metaButtonBarStyle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="5"
		        android:layout_marginLeft="10dp"
		        android:background="@color/black_overlay"
		        android:orientation="vertical"
		        tools:ignore="UselessParent" >  
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="5dp"
			        android:text="@string/timeText"
			        android:id="@+id/timeText"
			        android:textColor="#ffffff"
			        android:textSize="12sp"
			        android:textStyle="bold" />
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:text="@string/time"
			        android:id="@+id/time"
			        android:layout_marginTop="10dp"
			        android:gravity="center"
			        android:textColor="#ffffff"
			        android:textSize="30sp"
			        android:textStyle="bold" />
			    
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="10dp"
			        android:textColor="#ffffff"
			        android:textSize="12sp"
			        android:textStyle="bold" />
			    
	        </LinearLayout>

			<LinearLayout
		        android:id="@+id/speedLayout"
		        style="?metaButtonBarStyle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="5"
		        android:layout_marginRight="10dp"
		        android:layout_marginLeft="10dp"
		        android:background="@color/black_overlay"
		        android:orientation="vertical"
		        tools:ignore="UselessParent" >  
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="5dp"
			        android:text="@string/speedText"
			        android:id="@+id/speedText"
			        android:textColor="#ffffff"
			        android:textSize="12sp"
			        android:textStyle="bold" />
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:text="@string/speed"
			        android:id="@+id/speed"
			        android:layout_marginTop="10dp"
			        android:gravity="center"
			        android:textColor="#ffffff"
			        android:textSize="30sp"
			        android:textStyle="bold" />
			    
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="10dp"
			        android:text="@string/speedUnit"
			        android:id="@+id/speedUnit"
			        android:textColor="#ffffff"
			        android:textSize="12sp"
			        android:gravity="right"
			        android:textStyle="bold" />
			    
	        </LinearLayout>

        </TableRow>
 
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" 
            >
            
            <LinearLayout
		        android:id="@+id/distanceLayout"
		        style="?metaButtonBarStyle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="5"
		        android:layout_marginLeft="10dp"
		        android:background="@color/black_overlay"
		        android:orientation="vertical"
		        tools:ignore="UselessParent" >  
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="5dp"
			        android:text="@string/distanceText"
			        android:id="@+id/distanceText"
			        android:textColor="#ffffff"
			        android:textSize="12sp"
			        android:textStyle="bold" />
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:text="@string/distance"
			        android:id="@+id/distance"
			        android:layout_marginTop="10dp"
			        android:gravity="center"
			        android:textColor="#ffffff"
			        android:textSize="30sp"
			        android:textStyle="bold" />
			    
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="10dp"
			        android:text="@string/distanceUnit"
			        android:id="@+id/distanceUnit"
			        android:textColor="#ffffff"
			        android:gravity="right"
			        android:textSize="12sp"
			        android:textStyle="bold" />
			    
	        </LinearLayout>

			<LinearLayout
		        android:id="@+id/elevationLayout"
		        style="?metaButtonBarStyle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="5"
		        android:layout_marginRight="10dp"
		        android:layout_marginLeft="10dp"
		        android:background="@color/black_overlay"
		        android:orientation="vertical"
		        tools:ignore="UselessParent" >  
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="5dp"
			        android:text="@string/altitudeText"
			        android:id="@+id/altitudeText"
			        android:textColor="#ffffff"
			        android:textSize="12sp"
			        android:textStyle="bold" />
		        
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:text="@string/altitude"
			        android:id="@+id/altitude"
			        android:layout_marginTop="10dp"
			        android:gravity="center"
			        android:textColor="#ffffff"
			        android:textSize="30sp"
			        android:textStyle="bold" />
			    
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="10dp"
			        android:text="@string/altitudeUnit"
			        android:id="@+id/altitudeUnit"
			        android:textColor="#ffffff"
			        android:gravity="right"
			        android:textSize="12sp"
			        android:textStyle="bold" />
			    
	        </LinearLayout>

        </TableRow>
        
    </TableLayout>

	   <LinearLayout
	        android:id="@+id/advanced"
	        style="?metaButtonBarStyle"
	        android:layout_width="match_parent"
	       
	        android:layout_height="240dp"
	        android:layout_gravity="bottom|center_horizontal"
	        android:background="@color/dark_green"
	        android:orientation="vertical"
	        tools:ignore="UselessParent" >
	     
	       <TextView
		        android:id="@+id/advancedInformation"
		        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advancedText"
		        android:paddingTop="5dp"
		        android:paddingLeft="5dp"
		        android:layout_gravity="top|center_horizontal"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
	     
	       <TextView
		        android:id="@+id/gpsInformation"
		        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gpsState"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
    
		    <TextView
		        android:id="@+id/viewLocation"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:keepScreenOn="true"
		        android:text="@string/location"
		        android:textColor="#ffffff"
		        android:textSize="20sp"
		        android:textStyle="bold" />
	     
	        <TextView
		        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:text="@string/accuracy"
		        android:id="@+id/accuracy"
		        android:textColor="#ffffff"
		        android:textSize="20sp"
		        android:textStyle="bold" />
        
	        <TextView
		        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:text="@string/last_fix"
		        android:id="@+id/lastFix"
		        android:textColor="#ffffff"
		        android:textSize="20sp"
		        android:textStyle="bold" />
	        
	        <TextView
		        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:text="@string/userName"
		        android:id="@+id/userName"
		        android:textColor="#ffffff"
		        android:textSize="20sp"
		        android:textStyle="bold" />
	        
        </LinearLayout>
    
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >
        </LinearLayout>

        <requestFocus />


    </FrameLayout>
    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

</FrameLayout>
